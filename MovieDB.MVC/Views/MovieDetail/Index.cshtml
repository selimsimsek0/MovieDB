@model MovieDB.MVC.Models.MovieDetailViewModel;

<div class="detailbox">
    <img src="https://image.tmdb.org/t/p/w500@(Model.ImagePath)">
    <div>
        <h2>
            @Model.MovieTitle
            <span>(@Model.ReleaseYear)</span>
        </h2>
        <p>
           
            @Model.RelaseDate (@Model.ProductionCountries) | @Model.Genres | @Model.MovieRunTime

        </p>
        <h4>@Model.TagLine</h4>
        <h3>Overview</h3>
        <p>
            @Model.OverView
        </p>
    </div>
</div>